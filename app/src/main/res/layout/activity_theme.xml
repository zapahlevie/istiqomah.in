<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.avengers.istiqomahin.act_theme.ThemeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:shrinkColumns="*"
                android:stretchColumns="*" >
                <Button
                    android:id="@+id/button1"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:text="Turqoise"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:theme="@style/MyButton" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:text="Sun Flower"
                    android:textColor="@android:color/white"
                    android:theme="@style/MyButton2" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:text="Peter River"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:theme="@style/MyButton3" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:text="Alizarin"
                    android:textColor="@android:color/white"
                    android:theme="@style/MyButton4" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:text="Amethyst"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:theme="@style/MyButton5" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:text="Asphalt"
                    android:textColor="@android:color/white"
                    android:theme="@style/MyButton6" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:text="Carrot"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:theme="@style/MyButton7" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:text="Emerald"
                    android:textColor="@android:color/white"
                    android:theme="@style/MyButton8" />

            </TableRow>

        </TableLayout>
    </ScrollView>
</RelativeLayout>
